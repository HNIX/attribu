<%- model_class = Linkset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @linkset.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:campaign_id) %>:</strong></dt>
  <dd><%= @linkset.campaign_id %></dd>
</dl>

<h3>Destinations</h3>
<%= render 'destinations/list', destinations: @linkset.destinations %>
<br />
<br />


<%= link_to t('.back', :default => t("helpers.links.back")),
              tenant_campaign_path(@linkset.campaign.tenant_id, @linkset.campaign_id), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_linkset_path(@linkset), :class => 'btn btn-default' %>
<%= link_to 'Edit Linkset Destinations', destinations_linkset_path(id: @linkset.id),
              :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              linkset_path(@linkset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
