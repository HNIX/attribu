  <!-- User table widget -->
  <div class="column is-6">
      <div class="flex-card light-bordered light-raised">
          <h3 class="card-heading has-icon">Users for Campaign <%= @campaign.title %></h3>
          <table class="table hire-table">
              <thead>
                  <tr>
                      <th></th>
                      <th>Name</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                <% @campaign_users.each do |campaign_user| %>

                  <tr>
                      <td></td>
                      <td><%= campaign_user.email %></td>
                      <td>
                        <%= link_to "Remove", user_campaign_path(campaign_user.user_campaigns.find_by(campaign_id: @campaign.id)),
                                              :method => :delete,
                                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                              :class => 'btn btn-xs btn-danger' %>
                      </td>
                  </tr>
                  <% end %>

              </tbody>
          </table>
      </div>
  </div>

  <div class="column is-6">
      <div class="flex-card light-bordered light-raised">
          <h3 class="card-heading has-icon">Users to add to Campaign <%= @campaign.title %></h3>
          <table class="table hire-table">
              <thead>
                  <tr>
                      <th></th>
                      <th>Name</th>
                      <th>URL</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                <% @other_users.each do |other_user| %>

                  <tr>
                      <td></td>
                      <td><%= other_user.email %></td>
                      <td>
                        <%= link_to 'Add',
                                    add_user_tenant_campaign_path(id: @campaign.id, user_id: other_user.id),
                                    :method => :put,
                                    :class => 'btn btn-xs btn-success' %>
                      </td>
                  </tr>
                  <% end %>

              </tbody>
          </table>
      </div>
  </div>
  <!-- /User table widget -->
