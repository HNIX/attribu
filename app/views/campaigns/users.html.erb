<div class="page-header">
  <h3>Users for Campaign <%= @campaign.title %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @campaign_users.each do |campaign_user| %>
      <tr>
        <td><%= campaign_user.email %></td>
        <td>
            <%= link_to "Remove", user_campaign_path(campaign_user.user_campaigns.find_by(campaign_id: @campaign.id)),
                                  :method => :delete,
                                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                  :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Users to add to Campaign <%= @campaign.title %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @other_users.each do |other_user| %>
      <tr>
        <td><%= other_user.email %></td>
        <td>
          <%= link_to 'Add',
                      add_user_tenant_campaign_path(id: @campaign.id, user_id: other_user.id),
                      :method => :put,
                      :class => 'btn btn-xs btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', tenant_campaign_path(id: @campaign.id, tenant_id: @campaign.tenant_id),
                      :class => 'btn btn-primary' %>
