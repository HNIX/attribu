<!-- Edit form -->
<%= form_for [@tenant, @campaign], :html => { :class => "form-horizontal project" } do |f| %>
    <div class="columns">
      <% if @campaign.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
            <% @campaign.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
        <div class="column is-12">
            <div class="control-material is-secondary has-icon">
                <%= f.text_field :title, :class => 'material-input' %>
                <span class="material-highlight"></span>
                <span class="bar"></span>
                <%= f.label :title %>
            </div>

            <div class="control-material is-secondary has-icon">
                <%= f.text_field :description, :class => 'material-input' %>
                <span class="material-highlight"></span>
                <span class="bar"></span>
                <%= f.label :description %>
            </div>
            <div class="control-material">
                <%= f.hidden_field :tenant_id, value: params[:tenant_id], :class => 'form-control' %>
            </div>
            <div class="has-text-centered mt-30">
              <%= f.submit nil, :class => 'button btn-dash secondary-btn is-raised is-fullwidth rounded no-lh' %>
            </div>
        </div>

    </div>
<% end %>
<!-- /Edit form -->
