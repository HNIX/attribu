<%- model_class = Source -%>

<div class="page-header">

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

</div>

<% if sources.size > 0 %>
<% sources.each do |source| %>
<div class="social-card is-facebook flex-card light-bordered light-raised padding-20">
    <div class="social-icon">
        <!-- <i class="fa fa-facebook"></i> -->
    </div>
    <div class="stat-count">
        <div class="count"><%= source.name %></div>
        <div class="count-info"><%= source.medium %></div>
    </div>
    <span class="symbol"></span>
    <%= link_to "Delete", source_path(source),
    :method => :delete,
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-xs btn-danger' %>


</div>

<% end %>

<% else %>

<p class="lead">You don't have any sources</p>

<% end %>

<%= link_to 'New Source', new_source_path,
:class => 'btn btn-primary' %>
