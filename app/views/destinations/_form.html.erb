<%= form_for @destination, :html => { :class => "form-horizontal destination" } do |f| %>
  <div class="columns">
    <% if @destination.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @destination.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
      <div class="column is-12">
          <div class="control-material is-secondary has-icon">
              <%= f.text_field :name, :class => 'material-input' %>
              <span class="material-highlight"></span>
              <span class="bar"></span>
              <%= f.label :name %>
          </div>

          <div class="control-material is-secondary has-icon">
              <%= f.text_field :url, :class => 'material-input' %>
              <span class="material-highlight"></span>
              <span class="bar"></span>
              <%= f.label :url %>
          </div>

          <div class="has-text-centered mt-30">
            <%= f.submit nil, :class => 'button btn-dash secondary-btn is-raised is-fullwidth rounded no-lh' %>
          </div>
      </div>

  </div>
<% end %>
