<%- model_class = Link -%>

<% if links.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:domain) %></th>
      <th><%= model_class.human_attribute_name(:source) %></th>
      <th><%= model_class.human_attribute_name(:medium) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  <% links.each do |link| %>
  <tr>
    <td><%= link_to link.domain, link_path(link), class: 'main-link' %></td>
    <td><%= link.source %></td>
    <td><%= link.medium %></td>
    <td>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    link_path(link),
    :method => :delete,
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-xs btn-danger' %>
  </td>
</tr>
<% end %>
</tbody>
</table>

<% else %>

<p class="lead">You don't have any links</p>

<% end %>
