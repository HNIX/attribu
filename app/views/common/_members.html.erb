<div class="page-header">

  <h1>Members</h1>

</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col"><%= sortable "email" %></th>
      <th scope="col"><%= sortable "created_at" %></th>
      <th scope="col"><%= sortable "first_name" %></th>
      <th scope="col"><%= sortable "last_name" %></th>
    </tr>
  </thead>
  <tbody>
  <% @tenant.members.each do |member| %>
    <tr>
      <th scope="row"><%= member.id %></th>
      <td><%= member.user.email %></td>
      <td><%= member.created_at %></td>
      <td><%= member.first_name %></td>
      <td><%= member.last_name %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "Add Members", new_member_path, class: 'button btn-dash secondary-btn is-raised is-fullwidth rounded no-lh' %>
