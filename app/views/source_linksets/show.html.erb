<%- model_class = SourceLinkset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:linkset_id) %>:</strong></dt>
  <dd><%= @source_linkset.linkset_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_id) %>:</strong></dt>
  <dd><%= @source_linkset.source_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              source_linksets_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_source_linkset_path(@source_linkset), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              source_linkset_path(@source_linkset),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
