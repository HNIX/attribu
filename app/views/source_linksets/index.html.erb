<%- model_class = SourceLinkset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:linkset_id) %></th>
      <th><%= model_class.human_attribute_name(:source_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @source_linksets.each do |source_linkset| %>
      <tr>
        <td><%= link_to source_linkset.id, source_linkset_path(source_linkset) %></td>
        <td><%= source_linkset.linkset_id %></td>
        <td><%= source_linkset.source_id %></td>
        <td><%=l source_linkset.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      source_linkset_path(source_linkset), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_source_linkset_path(source_linkset), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      source_linkset_path(source_linkset),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_source_linkset_path,
            :class => 'btn btn-primary' %>
